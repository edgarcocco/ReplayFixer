<UserControl x:Class="ReplayFixer.Views.UserControls.ReplayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReplayFixer.Views.UserControls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:Card>
            <StackPanel>
                <TextBlock>
                .rec
                </TextBlock>
                <TextBlock Text="Map name:"/>
                <TextBlock Text="{Binding Replay.MapName}"/>
                <TextBlock Text="{Binding Replay.GameDate}"/>
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
